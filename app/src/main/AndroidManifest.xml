<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cathedrale_face"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cathedrale_face"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:parentActivityName=".MainActivity"
            android:name=".ArchitectureCode"
            android:label="@string/category_architecture">
        </activity>

        <activity
            android:parentActivityName=".MainActivity"
            android:name=".RestaurantsCode"
            android:label="@string/category_restaurants">
        </activity>

        <activity
            android:parentActivityName=".MainActivity"
            android:name=".NightlifeCode"
            android:label="@string/category_nightlife">
        </activity>

        <activity
            android:parentActivityName=".MainActivity"
            android:name=".MonumentsCode"
            android:label="@string/category_monuments">
        </activity>
    </application>



</manifest>